@using System.Globalization
@model AKCore.Models.SignUpModel
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    var culture = new CultureInfo("sv");
    var e = Model.Event;
}

<h1>@Model.Event.Name</h1>
<div class="row">
    <div class="col-sm-6">
        <form id="signup-form" action="/Upcomming/Signup/@e.Id" method="POST">
            <div class="alert alert-danger" style="display: none;">
            </div>
            <div class="alert alert-success" style="display: none;">
            </div>
            <div class="form-group">
                <label asp-for="Where"></label>
                <div class="indent">
                    <div class="radio">
                        <label>
                            <input type="radio" asp-for="Where" value="Hålan" required>
                            Hålan
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" asp-for="Where" value="Direkt" required>
                            Direkt
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" asp-for="Where" value="Kan inte komma" required>
                            Kan inte komma
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="Car">
                <label asp-for="Car"></label>
            </div>
            <div class="form-group">
                <input asp-for="Instrument">
                <label asp-for="Instrument"></label>
            </div>
            <div class="form-group">
                <label asp-for="Comment"></label>
                <input class="form-control" asp-for="Comment">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Anmäl</button>
            </div>
        </form>
    </div>
    <div class="col-sm-6">
        <div class="col-sm-12" style="font-weight: 500;">
            <p style="text-transform: capitalize;">@e.Day.ToString("dddd dd", culture)/@e.Day.ToString("MM", culture) </p>
            <p>@e.Place</p>
            <br />
        </div>
        <div class="col-sm-12">
            @{
                var halan = e.Halan.ToString("HH:mm");
                var there = e.There.ToString("HH:mm");
                var start = e.Starts.ToString("HH:mm");
                if (halan != "00:00")
                {
                    <p>Samling i hålan: @halan</p>
                }
                if (there != "00:00")
                {
                    <p>Samling på plats: @there</p>
                }
                if (start != "00:00")
                {
                    <p>Spelning startar: @start</p>
                }
            }
        </div>
    </div>
</div>
<div id="signup-list">
    <h2>Kommer</h2>
    @foreach (var s in Model.Comming())
    {
        <div class="row signup-row">
            <div class="col-sm-2 signup-element">
                <p>@s.PersonName</p>
            </div>
            <div class="col-sm-2 signup-element">
                <p>@s.InstrumentName@(string.IsNullOrWhiteSpace(s.OtherInstruments) ? "" : ", "+s.OtherInstruments.Replace(",",", "))</p>
            </div>
            <div class="col-sm-2 signup-element">
                <p>@s.GetInfo()</p>
            </div>
            @if (Model.IsNintendo)
            {
                <div class="col-sm-3 signup-element">
                    <p>@s.Comment</p>
                </div>
                <div class="col-sm-3 signup-element">
                    <p>@s.SignupTime.ToString("MM-dd HH:mm")</p>
                </div>
            }
            else
            {
                <div class="col-sm-6 signup-element">
                    <p>@s.Comment</p>
                </div>
            }
        </div>
    }
    <h2>Kommer inte</h2>
    @foreach (var s in Model.NotComming())
    {
        <div class="row signup-row">
            <div class="col-sm-3 signup-element">
                <p>@s.PersonName</p>
            </div>
            <div class="col-sm-3 signup-element">
                <p>@s.InstrumentName</p>
            </div>
            @if (Model.IsNintendo)
            {
                <div class="col-sm-3 signup-element">
                    <p>@s.Comment</p>
                </div>
                <div class="col-sm-3 signup-element">
                    <p>@s.SignupTime.ToString("MM-dd HH:mm")</p>
                </div>
            }
            else
            {
                <div class="col-sm-6 signup-element">
                    <p>@s.Comment</p>
                </div>
            }
        </div>
    }
</div>