@using AKCore.DataModel

<div id="createUserModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Lägg till en ny användare</h4>
            </div>
            <form action="/User/CreateUser" id="create-user-form" autocomplete="off" method="post">
                <div class="modal-body">
                    <div class="alert alert-success" style="display: none;">
                    </div>
                    <div class="alert alert-danger" style="display: none;">
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Förnamn</label>
                                <input type="text" autocomplete="off" class="form-control" name="FirstName" placeholder="Förnamn" value="" >
                            </div>
                            <div class="form-group">
                                <label>Efternamn</label>
                                <input type="text" autocomplete="off" class="form-control" name="LastName" placeholder="Efternamn" value="" >
                            </div>
                            <div class="form-group">
                                <label>Telefonnummer</label>
                                <input type="text" autocomplete="off" class="form-control" name="Phone" placeholder="Telefonnummer" value="" >
                            </div>
                            <div class="form-group">
                                <label>Epost</label>
                                <input type="email" autocomplete="off" class="form-control" name="Email" placeholder="Epost" value="">
                            </div>
                            <div class="form-group">
                                <label>Instrument</label>
                                <select class="form-control" name="Instrument">
                                    <option value="">Välj instrument</option>
                                    @foreach (var instr in AkInstruments.Instrument)
                                    {
                                        <option>@instr</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Användarnamn</label>
                                <input type="text" autocomplete="off" class="form-control" name="UserName" placeholder="Användarnamn" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Lösenord</label>
                                <input type="password" autocomplete="off" class="form-control" name="Password" placeholder="Lösenord" value="" required>
                            </div>
                            <div class="form-group">
                                <label>Roller</label>
                                <select class="form-control" name="Roles">
                                    <option value="">Välj roll</option>
                                    @foreach (var rol in AkRoles.Roles)
                                    {
                                        <option>@rol</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Poster</label>
                                <select class="form-control" name="Poster">
                                    <option value="">Välj post</option>
                                    @foreach (var rol in AkPoster.Poster)
                                    {
                                        <option>@rol</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Senaste medalj</label>
                                <select class="form-control" name="Medal">
                                    <option value="">Ingen medalj</option>
                                    @foreach (var rol in AkMedals.TermMedals)
                                    {
                                        <option>@rol</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Senast utdelade medalj</label>
                                <select class="form-control" name="GivenMedal">
                                    <option value="">Ingen medalj</option>
                                    @foreach (var rol in AkMedals.TermMedals)
                                    {
                                        <option>@rol</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lägg till</button>
                </div>
            </form>

        </div>
    </div>
</div>