
<div id="changePasswordModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Byt lösenord</h4>
            </div>
            <form action="/User/ChangePassword" id="change-pass-form" autocomplete="off" method="post">
                <div class="modal-body">
                    <div class="alert alert-danger" style="display: none;">
                    </div>
                        <input type="hidden" class="form-control" id="change-user-name" name="userName" value="" required>
                    <div class="form-group">
                        <label>Lösenord</label>
                        <input type="password" autocomplete="off" class="form-control" id="change-user-pass" name="password" placeholder="Lösenord" value="" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Skapa nytt lösenord</button>
                </div>
            </form>
        </div>
    </div>
</div>