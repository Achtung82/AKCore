@model AKCore.Models.ProfileModel
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<div class="row">
    <div class="col-md-6">
        <div class="">
            <h3>Roller</h3>
            <div class="roles">
                @foreach (var r in Model.Roles)
                {
                    <span class="role">
                        @r.ToString()
                    </span>
                }
            </div>
        </div>
        <h3>Användarinfo</h3>
        <form id="update-profile-form" method="POST" action="/Profile/EditProfile">
            <div class="alert alert-danger" style="display: none;"></div>
            <div class="alert alert-success" style="display: none;">Profil uppdaterad</div>
            <div class="form-group">
                <label for="UserName">Användarnamn</label>
                <input type="text" class="form-control" name="UserName" id="UserName" placeholder="Användarnamn" value="@Model.UserName">
            </div>
            <div class="form-group">
                <label for="Email">Epost</label>
                <input type="email" class="form-control" name="Email" id="Email" placeholder="Epost" value="@Model.Email">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Uppdatera profil</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Byt lösenord:</h3>
        <form id="change-profile-password" method="POST" action="/Profile/ChangePassword">
            <div class="alert alert-danger" style="display: none;"></div>
            <div class="alert alert-success" style="display: none;">Lösenord uppdaterat</div>
            <div class="form-group">
                <label for="newpass">Nytt lösenord:</label>
                <input type="password" class="form-control" name="password" id="newpass" placeholder="Lösenord" value="">
            </div>
            <div class="form-group">
                <label for="confirmpass">Bekräfta lösenord:</label>
                <input type="password" class="form-control" id="confirmpass" placeholder="Bekräfta lösenord" value="">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Uppdatera lösenord</button>
            </div>
        </form>
    </div>
</div>