@model AKCore.Models.HeaderModel

<header>
    <div class="container">
        <a class="logo" href="/">
            <img class="hidden-xs" src="~/images/logo.png" />
            <img class="visible-xs" src="~/images/mobillogo.png" />
        </a>
        <div class="account hidden-xs">
            @if (!Model.LoggedIn)
            {
                <a href="#" class="login">Logga in</a>
            }
            else
            {
                <p>
                    Inloggad som <a href="/Profile">@Model.UserName</a>
                </p>
                <a href="/Account/Logout" class="logout">Logga ut</a>
            }
        </div>
        <div class="social hidden-xs">
            <a href="https://www.facebook.com/altekamereren/" target="_blank" class="fa fa-facebook-square" aria-hidden="true"></a>
            <a href="https://twitter.com/Alte_Kamereren" target="_blank" class="fa fa-twitter-square" aria-hidden="true"></a>
            <a href="https://www.youtube.com/user/AlteKamereren" target="_blank" class="fa fa-youtube-square" aria-hidden="true"></a>
            <a href="https://www.instagram.com/altekamereren/" target="_blank" class="fa fa-instagram" aria-hidden="true"></a>
        </div>
    </div>
    <nav>
        @Html.Partial("Partials/DesktopMenu", Model)
    </nav>
</header>
<div id="mobile-menu">
    @Html.Partial("Partials/MobileMenu", Model)
    
</div>